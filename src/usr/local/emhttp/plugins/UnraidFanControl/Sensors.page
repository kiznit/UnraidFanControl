<script>
    <?php echo "var sensors = ".json_encode(detect_sensors() ?: Array(), true).";" ?>

    function update_sensors(sensors, data) {
        sensors.forEach(function(sensor, index) {
            var value = data[sensor.bus][sensor.name];
            if (value !== undefined) {
                sensor.value = value;
                if (sensor.type === "fan") {
                    $("#sensor-value-" + index).text(value + " RPM");
                } else {
                    $("#sensor-value-" + index).text(value.toFixed(1) + "°C");
                }
            }
        });
    }

    function render_sensors() {
        $.getJSON("/plugins/<?=$plugin_name?>/scripts/sensors.php", function(data) {
            update_sensors(sensors, data);
        });
    }

    $(document).ready(function() {
        render_sensors();
        setInterval(function() { render_sensors(); }, 1000);
    });
</script>

